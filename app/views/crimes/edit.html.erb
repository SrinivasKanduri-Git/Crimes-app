<%=render 'shared/errors', obj:@crime%>

<h1>Edit crime details</h1>

<%=form_for @crime do |f|%>
  <p><%=f.label "crime type:"%>
  <%=f.text_field :crime_type%></p>
  <p><%=f.label "description:"%>
  <%=f.text_area :description%></p>
  <p><%=f.label "priority:"%>
  <%=f.select :priority, Crime.priorities.keys%></p>
  <%if logged_in?%>
    <p><%=f.label "status:"%>
    <%=f.radio_button(:resolved, "true")%>
    <%=f.label(:resolved, "resolved")%>
    <%=f.radio_button(:resolved, "false")%>
    <%=f.label(:resolved, "unresolved")%></p>
  <%end%>
  <%=f.submit%>
<% end %>
