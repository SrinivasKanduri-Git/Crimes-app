<head>
  <h1>Welcome to crime reporting portal</h1>
  <%if logged_in?%>
    <%r_count=0%>
    <%u_count=0%>
    <%@crimes.each do |c|%>
      <%if c.resolved?%>
        <%r_count += 1%>
      <%else%>
        <%u_count +=1%>
      <%end%>
    <% end %>
    <h3>
      <p>resolved crimes:<%=r_count%></p>
      <p>unresolved crimes:<%=u_count%></p>
      <p>Total crimes:<%=r_count + u_count%></p>
    </h3>
  <% end %>
  <h2>List of all the crimes:</h2>
  <style type="text/css">
  td {
    padding: 0 15px;
  }
</style>
</head>
<table>
  <thead>
    <tr>
      <td><u>crime type</u></td>
      <td><u>crime city</u></td>
      <td><u>crime locality</u></td>
      <td><u>crime priority</u></td>
      <td><u>crime reporter</u></td>
    </tr>
  </thead>
  <tbody>
    <% @crimes.each do |crime|%>
      <tr>
        <td><%=link_to crime.crime_type, crime_path(crime)%></td>
        <td><%=link_to crime.locality.city.city, city_path(crime.locality.city)%></td>
        <td><%=link_to crime.locality.locality, locality_path(crime.locality)%></td>
        <% if crime.priority == "high"%>
          <td style= "color: red;"><b><%=crime.priority%></b></td>
          <% elsif crime.priority == "medium"%>
          <td style= "color: orange;"><b><%=crime.priority%></b></td>
          <% else%>
          <td style= "color: green;"><b><%=crime.priority%></b></td>
        <% end %>
        <td><%=link_to crime.crime_reporter.reporter, crime_reporter_path(crime.crime_reporter)%></td>

      </tr>
    <% end %>
  </tbody>
</table>

<h2>
  <%=link_to 'Add new city', new_city_path%>
  <%unless logged_in?%>
  | <%=link_to 'Report a new crime', new_crime_path%>
  | <%=link_to 'Batman login', login_path%>
  <% end %>
</h2>
